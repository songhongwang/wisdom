<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="14dip">

    <ImageView
        android:id="@+id/i_avatarzi"
        android:layout_width="36dip"
        android:layout_height="36dip"
        android:layout_marginRight="10dip"/>

    <TextView
        android:id="@+id/t_nicknamezi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/i_avatarzi"
        android:textColor="#000"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/t_shenfenzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t_nicknamezi"
        android:layout_marginTop="0.5dip"
        android:layout_toRightOf="@+id/i_avatarzi"
        android:textColor="#777"
        android:textSize="13sp"/>

    <LinearLayout
        android:id="@+id/ll_content_and_pictureszi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/i_avatarzi"
        android:orientation="vertical">
        <TextView
            android:id="@+id/t_contentzi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:textColor="#000"
            android:textSize="15sp"/>

        <com.cbt.main.view.piaoquan.MessagePicturesLayout
            android:id="@+id/l_pictureszi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"/>
    </LinearLayout>


    <View
        android:id="@+id/v_content_linezi"
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_below="@id/ll_content_and_pictureszi"
        android:layout_marginLeft="3dip"
        android:layout_marginRight="3dip"
        android:layout_marginTop="10dip"
        android:background="#E1E1E1"/>


    <TextView
        android:id="@+id/tv_timezi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="5dp"
        android:layout_below="@id/v_content_linezi"
        android:layout_marginTop="10dip"
        android:text=" | "
        android:textColor="@color/black"
        android:drawableLeft="@drawable/more_icon_plant"
        android:textSize="12sp"/>

    <TextView
        android:id="@+id/tv_reply_countzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_below="@id/v_content_linezi"
        android:drawableLeft="@drawable/more_icon_release"
        android:layout_marginTop="10dip"
        android:textColor="@color/black"
        android:textSize="12sp"/>

</RelativeLayout>