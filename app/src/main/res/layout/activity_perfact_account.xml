<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/layout_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/top"/>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_top"
        android:orientation="vertical">
        <com.cbt.main.view.ClearWriteEditText
            android:id="@+id/et_farm_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rc_ed_public_service_search_selector"
            android:drawableLeft="@drawable/login_icon_password"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入农庄名字"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black_overlay" />

        <com.cbt.main.view.ClearWriteEditText
            android:id="@+id/et_farm_zuowu"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rc_ed_public_service_search_selector"
            android:drawableLeft="@drawable/login_icon_password"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="请输入农庄作物"
            android:drawablePadding="5dp"
            android:inputType="textPassword"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black_overlay" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_commit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="14sp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/rect_corner50_blue"
        android:text="提交"/>
</RelativeLayout>
